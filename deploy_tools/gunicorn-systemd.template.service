[Unit]
Description=Gunicorn server for SITENAME

[Service]
Restart=on-failure
User=albert
WorkingDirectory=/home/albert/sites/SITENAME/source
ExecStart=/home/albert/sites/SITENAME/virtualenv/bin/gunicorn --bind unix:/tmp/SITENAME.socket superlists.wsgi:application

[Install]
WantedBy=multi-user.target
